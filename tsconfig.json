{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": [
      "nativewind/types"
    ],
    "paths": {
      "@src/*": ["./src/*"],
      "@app/*": ["./app/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@assets/*": ["./assets/*"],
      "@constants/*": ["./constants/*"],
      "@hooks/*": ["./hooks/*"],
      "@store/*": ["./store/*"],
      "@styles/*": ["./styles/*"],
      "@theme/*": ["./theme/*"],
      "@locales/*": ["./locales/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}